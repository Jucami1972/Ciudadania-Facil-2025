{
  "expo": {
    "name": "CiudadaniaFacil",
    "slug": "CiudadaniaFacil",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ciudadaniafacil.app",
      "newArchEnabled": true,
      "jsEngine": "hermes",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Esta app necesita acceso al micrófono para el reconocimiento de voz durante las prácticas.",
        "NSSpeechRecognitionUsageDescription": "Esta app necesita acceso al reconocimiento de voz para transcribir las respuestas del usuario."
      },
      "plugins": [
        [
          "expo-notifications",
          {
            "icon": "./src/assets/icon.png",
            "color": "#7C3AED",
            "sounds": []
          }
        ]
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ciudadaniafacil.app",
      "newArchEnabled": true,
      "jsEngine": "hermes",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ],
      "plugins": [
        [
          "expo-notifications",
          {
            "icon": "./src/assets/adaptive-icon.png",
            "color": "#7C3AED",
            "sounds": [],
            "mode": "default"
          }
        ]
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "bundler": "metro",
      "name": "Ciudadanía Fácil",
      "shortName": "CiudadaniaFacil",
      "description": "Aprende para el examen de ciudadanía estadounidense de manera fácil y práctica",
      "themeColor": "#007AFF",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "orientation": "portrait"
    },
    "plugins": [
      "expo-web-browser"
    ]
  }
}
